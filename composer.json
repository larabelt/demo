{
  "name": "larabelt/demo",
  "description": "LaraBelt Demo",
  "keywords": [
    "framework",
    "laravel"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=5.6.4",
    "laravel/framework": "5.4.*",
    "laravel/tinker": "~1.0",
    "larabelt/clip": "dev-master",
    "larabelt/content": "dev-master",
    "larabelt/core": "dev-master",
    "larabelt/glue": "dev-master",
    "larabelt/menu": "dev-master",
    "larabelt/spot": "dev-master"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~5.0",
    "barryvdh/laravel-debugbar": "^2.3",
    "barryvdh/laravel-ide-helper": "2.2.3",
    "rap2hpoutre/laravel-log-viewer": "^0.8.0",
    "raveren/kint": "1.0.10"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-install-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postInstall",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "php artisan optimize"
    ],
    "clear": [
      "php artisan clear-compiled",
      "php artisan cache:clear",
      "php artisan view:clear",
      "rm storage/logs/laravel.log"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  }
}
